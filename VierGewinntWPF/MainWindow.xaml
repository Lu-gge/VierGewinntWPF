<Window x:Class="VierGewinntWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VierGewinntWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="870" Width="760">
    <Grid Margin="0,-15,0,-16" RenderTransformOrigin="0.506,0.175">
        <Button x:Name="NewGame" Uid="C" Click="NewGame_Click" Content="Neues Spiel" HorizontalAlignment="Left" Margin="400,100,0,0" VerticalAlignment="Top" Width="80" Height="50"/>
        <Canvas x:Name="Can" HorizontalAlignment="Center" Margin="0,191,0,0"  VerticalAlignment="Top" Width="500">
            <Button x:Name="Column1" Tag="0" Click="Auswahl_Click" Content="v" Width="25" Height="30" HorizontalAlignment="Left" Canvas.Left="0" VerticalAlignment="Top"/>
            <Button x:Name="Column2" Tag="1" Click="Auswahl_Click" Content="v" Width="25" Height="30" HorizontalAlignment="Left" Canvas.Left="80" VerticalAlignment="Top"/>
            <Button x:Name="Column3" Tag="2" Click="Auswahl_Click" Content="v" Width="25" Height="30" HorizontalAlignment="Left" Canvas.Left="160" VerticalAlignment="Top"/>
            <Button x:Name="Column4" Tag="3" Click="Auswahl_Click" Content="v" Width="25" Height="30" HorizontalAlignment="Left" Canvas.Left="240" VerticalAlignment="Top"/>
            <Button x:Name="Column5" Tag="4" Click="Auswahl_Click" Content="v" Width="25" Height="30" HorizontalAlignment="Left" Canvas.Left="320" VerticalAlignment="Top"/>
            <Button x:Name="Column6" Tag="5" Click="Auswahl_Click" Content="v" Width="25" Height="30" HorizontalAlignment="Left" Canvas.Left="400" VerticalAlignment="Top"/>
            <Button x:Name="Column7" Tag="6" Click="Auswahl_Click" Content="v" Width="25" Height="30" HorizontalAlignment="Left" Canvas.Left="480" VerticalAlignment="Top"/>
        </Canvas>
        <TextBox x:Name="RotName" HorizontalAlignment="Left" Height="20" Margin="250,100,0,0" TextWrapping="Wrap" Text="Rot" VerticalAlignment="Top" Width="117"/>
        <TextBox x:Name="BlauName" HorizontalAlignment="Left" Height="20" Margin="250,130,0,0" TextWrapping="Wrap" Text="Blau" VerticalAlignment="Top" Width="117"/>
        <Label Content="Rot" TextBlock.Foreground="Red" HorizontalAlignment="Left" Margin="210,97,0,0" VerticalAlignment="Top" Height="26" Width="30"/>
        <Label Content="Blau" TextBlock.Foreground="Blue" HorizontalAlignment="Left" Margin="206,127,0,0" VerticalAlignment="Top" Height="26" Width="34"/>
        <Grid x:Name="UiGrid" HorizontalAlignment="Center" Height="480" VerticalAlignment="Top" Width="560" Margin="0,282,0,0">
        </Grid>
        <Rectangle Fill="Aquamarine" HorizontalAlignment="Center" Height="20" Margin="0,262,0,0" Stroke="Black" VerticalAlignment="Top" Width="560"/>
        <Rectangle Fill="Aquamarine" HorizontalAlignment="Center" Height="20" Margin="0,762,0,0" Stroke="Black" VerticalAlignment="Top" Width="560"/>
        <Rectangle Fill="Aquamarine" HorizontalAlignment="Left" Height="520" Margin="82,262,0,0" Stroke="Black" VerticalAlignment="Top" Width="18"/>
        <Rectangle Fill="Aquamarine" HorizontalAlignment="Right" Height="520" Margin="0,262,82,0" Stroke="Black" VerticalAlignment="Top" Width="18"/>
    </Grid>
</Window>
